<div class="mt-5">
    <div class="row">
        <div class="col-10 mx-auto">
                <!-- Card -->
                <div class="card">
                    <div class="card-header bg-primary">
                        <h4 class="card-title text-center text-white"><a>Tạo mới khóa học</a></h4>
                    </div>
                <!-- Card content -->
                <div class="card-body">

                <form method="post" action="/course/store">
                    <div class="form-group">
                        <label for="name">Tên</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Nhập tên">
                    </div>
                    <div class="form-group">
                        <label for="description">Mô tả</label>
                        <input type="text" name="description" class="form-control" id="description" placeholder="Nhập mô tả">
                    </div>
                    <div class="form-group">
                        <label for="videoId">VideoId</label>
                        <input type="text" name="videoId"  class="form-control" id="videoId" placeholder="Nhập videoId">
                    </div>
                    <div class="form-group">
                        <label for="level">Level</label>
                        <input type="text" name="level" class="form-control" id="level" placeholder="Nhập cấp độ">
                    </div>
                   
                    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
                </form>

                </div>

            </div>
                <!-- Card -->
        </div>
    </div>
</div>