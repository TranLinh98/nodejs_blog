<div class="mt-5">
    <div class="row">
        <div class="col-10 mx-auto">
                <!-- Card -->
                <div class="card">
                    <div class="card-header bg-primary">
                        <h4 class="card-title text-center text-white"><a>Cập nhật khóa học</a></h4>
                    </div>
                <!-- Card content -->
                <div class="card-body">

                <form method="post" action="/course/{{course._id}}?_method=PUT">
                    <div class="form-group">
                        <label for="name">Tên</label>
                        <input type="text" name="name" class="form-control" value= "{{course.name}}" id="name">
                    </div>
                    <div class="form-group">
                        <label for="description">Mô tả</label>
                        <input type="text" name="description" class="form-control" value= "{{course.description}}" id="description">
                    </div>
                    <div class="form-group">
                        <label for="videoId">VideoId</label>
                        <input type="text" name="videoId"  class="form-control" value= "{{course.videoId}}" id="videoId">
                    </div>
                    <div class="form-group">
                        <label for="level">Level</label>
                        <input type="text" name="level" class="form-control" value= "{{course.level}}" id="level">
                    </div>
                   
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </form>

                </div>

            </div>
                <!-- Card -->
        </div>
    </div>
</div>