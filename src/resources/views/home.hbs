<div class="mt-5">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <!-- Card -->
            <div class="card">
                <a href="/course/{{this.slug}}">
                 <!-- Card image -->
                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                </a>
                <!-- Card content -->
                <div class="card-body">
                    <!-- Title -->
                    <h4 class="card-title"><a>{{this.name}}</a></h4>
                    <!-- Text -->
                    <p class="card-text">{{this.description}}</p>
                    <!-- Button -->
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>